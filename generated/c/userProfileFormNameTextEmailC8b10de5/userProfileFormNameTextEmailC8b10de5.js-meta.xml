<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>User Profile Form</masterLabel>
    <description>User profile form with name, email, phone, country, interests and bio in a two-column layout</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="showRequiredFields" type="Boolean" default="false" label="Show Required Field Indicators" description="Show asterisks for required fields"/>
            <property name="showCountry" type="Boolean" default="false" label="Show Country Field" description="Display the country dropdown field"/>
            <property name="showPhone" type="Boolean" default="false" label="Show Phone Field" description="Display the phone input field"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
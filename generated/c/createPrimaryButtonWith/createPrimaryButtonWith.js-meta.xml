<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Primary Button With Save Icon</masterLabel>
    <description>A primary button component with a save icon following SLDS 2 guidelines</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="label" type="String" default="Save" label="Button Label" description="Text label for the button"/>
            <property name="disabled" type="Boolean" default="false" label="Disabled" description="Whether the button is disabled"/>
            <property name="variant" type="String" default="brand" label="Button Variant" description="Variant of the button (brand, neutral, etc.)">
                <restrictedTo>
                    <possibleValue>brand</possibleValue>
                    <possibleValue>neutral</possibleValue>
                    <possibleValue>destructive</possibleValue>
                    <possibleValue>success</possibleValue>
                </restrictedTo>
            </property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
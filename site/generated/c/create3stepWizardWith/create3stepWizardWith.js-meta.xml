<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Three Step Wizard</masterLabel>
    <description>A 3-step wizard with progress indicator and next/back buttons</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage,lightningCommunity__Page">
            <property name="stepTitles" type="String[]" default="['Step 1','Step 2','Step 3']" label="Step Titles" description="Titles for each step in the wizard" required="false" />
            <property name="currentStep" type="Integer" default="0" min="0" max="2" label="Initial Step" description="The initial active step (0-2)" required="false" />
            <property name="showStepNumbers" type="Boolean" default="false" label="Show Step Numbers" description="Whether to show step numbers in the path indicator" required="false" />
            <property name="variant" type="String" default="base" label="Variant" description="Progress indicator style variant" required="false" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>